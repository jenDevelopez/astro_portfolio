<section id="contact" class="px-6 md:px-12 py-20">
  <h2 class="text-3xl font-bold mb-8 text-center">Contacto</h2>

  <form id="contact-form" autocomplete="off" class="max-w-xl mx-auto space-y-4">
    <label class="hidden" for="user_name">Nombre</label>
    <input
      id="user_name"
      type="text"
      name="user_name"
      placeholder="Nombre"
      class="w-full p-3 rounded-lg border-2 border-yellow-400 bg-slate-100 dark:bg-[#222] dark:text-white text-sm md:text-base"
      required
    />
    <label class="hidden"  for="user_email">Email</label>
    <input
    id="user_email"
      type="email"
      name="user_email"
      placeholder="Email"
      class="w-full p-3 rounded-lg border-2 border-yellow-400 bg-slate-100 dark:bg-[#222] dark:text-white text-sm md:text-base"
      required
    />
    <label class="hidden"  for="message">Mensaje</label>
    <textarea
    id="message"
      name="message"
      placeholder="Mensaje"
      rows="5"
      class="w-full p-3 rounded-lg border-2 border-yellow-400 bg-slate-100 dark:bg-[#222] dark:text-white text-sm md:text-base"
      required></textarea>
    <button
      type="submit"
      class="px-6 py-3 bg-yellow-400 text-black font-semibold rounded-lg hover:bg-yellow-300 w-full sm:w-auto"
    >
      Enviar
    </button>
  </form>

  <div class="mt-10 text-sm text-center text-gray-500 dark:text-gray-400">
    <p>📍 Murcia</p>
    <p>
      📧 <a href="mailto:info@jendevelopez.com" class="text-yellow-400"
        >info@jendevelopez.com</a
      >
    </p>
   
  </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"
></script>
<script>
  declare const emailjs: any;

  document.addEventListener("DOMContentLoaded", function () {
    emailjs.init("EToqoiwQleMd4DadZ");

    const form = document.getElementById("contact-form") as HTMLFormElement;
    if (!form) return;

    form.addEventListener("submit", function (e) {
      e.preventDefault();
      emailjs
        .sendForm("service_pxnkt6t", "template_c78bg4m", form)
        .then(() => {
          form.reset();
        })
        .catch((err: unknown) => {
          console.error(err);
          alert("Error al enviar el mensaje");
        });
    });
  });
</script>
