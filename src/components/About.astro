---
interface Props {
  skills?: string[];
}

const { skills = [] } = Astro.props as Props;
---
  <section
    id="about"
    class="px-6 md:px-12 py-20 bg-yellow-50 dark:bg-[#181818]"
  >
    <h2 class="text-3xl font-bold mb-8 text-center">Sobre mi</h2>
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <img
        src="/dev.png"
        alt="Profile"
        class="rounded-2xl shadow-lg w-full max-w-sm mx-auto"
      />
      <div>
        <p
          class="text-gray-800 dark:text-gray-300 mb-6 text-sm md:text-base leading-relaxed"
        >
          Soy una desarrolladora FullStack que no solo construye código, sino
          que también construye puentes entre la visión del cliente y la
          realidad digital.
        </p>
        <h3 class="font-semibold mb-4">Tech Stack</h3>
        <div class="flex flex-wrap gap-3 text-sm">
          {
            skills.map((skill) => (
              <span class="px-3 py-1 bg-yellow-200 dark:bg-[#333] rounded-lg">
                {skill}
              </span>
            ))
          }
        </div>
      </div>
    </div>
  </section>